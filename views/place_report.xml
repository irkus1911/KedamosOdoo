<?xml version="1.0" encoding="windows-1252"?>

<odoo>    
    <data>       
        <report id="kedamos_place" 
                model="kedamos.place" 
                string="Place"
                report_type="qweb-pdf"
                name="kedamos.report_place"
                file="kedamos.report_place"
                attatchment_use="True"
                attachment="(object.state in ('open','paid')) and 
                ('INV'+(object.number or '').replace('/','')+'.pdf')"
        />
        
        <template id="place_report_view">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="report.external_layout">
                        <div class="page">
                            <h2 t-field="doc.name"/>
                            <h3>Places:</h3>
                            <ul>
                                <t t-foreach="doc.place_ids" t-as="place">
                                    <li>
                                        <span t-field="place.name"/>
                                        <span t-field="place.address"/>
                                        <span t-field="place.price"/>
                                        <span t-field="place.date_renewal"/>
                                    </li>
                                </t>
                            </ul>
                        </div>
                    </t>
                </t>
            </t>
        </template>   
    </data> 
</odoo>
