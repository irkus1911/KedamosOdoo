<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Esto muestra la lista de los clientes -->
        <record model="ir.ui.view" id="client_list">
            <field name="name">client.list</field>
            <field name="model">kedamos.client</field>
            <field name="inherit_id" ref="base.view_users_tree"/>
            <field name="arch" type="xml">
                <tree>
                    <field name="email"/>
                </tree>
            </field>
        </record>
      
        <!-- Esto es el formulario para el cliente -->
        <record model="ir.ui.view" id="client_form">
            <field name="name">client.form</field>
            <field name="model">kedamos.client</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group string="Personal Info">
                            <group>
                                <field name="name"/>
                                <field name="login"/>
                                <field name="email"/>
                                <field name="password"/>
                            </group>
                            <group>
                                <field name="accountNumber"/>
                                <field name="isPremium"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Esto aÃ±ade una busqueda parametrizada
        <record model="ir.ui.view" id="client_search">
            <field name="name">client.search</field>
            <field name="model">kedamos.client</field>
            <field name="arch" type="xml">
                <search>
                    <field name="email"/>
                </search>
            </field>
        </record>
         -->
    </data>
</odoo>